<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_view_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/headshot_7"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/display_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marcelino"
        android:textStyle="bold"
        android:textColor="@color/text_color_icon"
        android:layout_alignBottom="@+id/avatar_img"
        android:layout_toEndOf="@+id/avatar_img"
        android:layout_marginBottom="26dp"/>

    <TextView
        android:id="@+id/connectin_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/online"
        android:layout_alignTop="@+id/avatar_img"
        android:paddingEnd="@dimen/dimen_S_S"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>